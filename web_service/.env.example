# Document Loader Web Service Configuration
# Copy this file to .env and update values for your environment

# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Security Configuration (REQUIRED)
SECRET_KEY=your-super-secret-key-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Banking Security Settings
REQUIRE_MFA=true
SESSION_TIMEOUT_MINUTES=15
MAX_LOGIN_ATTEMPTS=3
PASSWORD_MIN_LENGTH=12

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/document_loader
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# CORS and Security
CORS_ORIGINS=["https://bankportal.internal","https://documentloader-ui.bank.com"]
ALLOWED_HOSTS=["documentloader-api.bank.com","localhost","127.0.0.1"]

# Document Loader CLI Integration
DOCUMENT_LOADER_PATH=/opt/document-loader
DOCUMENT_LOADER_TIMEOUT=7200

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_DETAILED_AUDIT=true
COMPLIANCE_MODE=SOX

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Business Configuration
DEFAULT_BUSINESS_UNIT=TECHNOLOGY
REQUIRE_BUSINESS_JUSTIFICATION=true

# Azure Integration (Optional)
AZURE_KEY_VAULT_URL=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=

# Control-M Integration (Optional)
CONTROLM_API_ENDPOINT=
CONTROLM_TOKEN=